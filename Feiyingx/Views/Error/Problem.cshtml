@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>We got a problem</title>
    <script type="text/javascript" src="//use.typekit.net/ywx7jnn.js"></script>
    <script type="text/javascript">try { Typekit.load(); } catch (e) { }</script>
    <style>
        body>div{
            width: 100%;
            height: 100%;
            position: fixed;
            top:0;bottom:0;left:0;right:0;
            text-align: center;
        }


        h2, p {
            background-color: #fff;
            opacity: 0.7;
        }

        h2 {
            font-size: 50px;
            font-weight: 200;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            margin-top: 50px;
        }

        .link-container {
            text-align: center;
            top: 10%;
            position: relative;
        }

        .link-container img{
            width: 300px;
            -webkit-transition: all 0.3s;
            -moz-transition: all 0.3s;
            transition: all 0.3s;
        }

        .link-container img:hover {
            width: 350px;
        }

        .link-container a {
            margin: 50px;
        }
    </style>
</head>
<body>   
    <div>
        <h2 class="tk-futura-pt">Please choose your browser and come back</h2>
        <div class="link-container">
            <a href="https://www.google.com/intl/en/chrome/browser/" target="_blank"><img src="/images/chrome.png" alt="Download Chrome" /></a>
            <a href="http://www.mozilla.org/en-US/firefox/new/" target="_blank"><img src="/images/firefox.png" alt="Download Firefox" /></a>
        </div>
    </div>
</body>
</html>
